@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog</th>
                                <th>Kullanıcı</th>
                                <th>Başlık</th>
                                <th>Yorum</th>
                                <th>Tarih</th>
                                <th>Puan</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CommentID</td>
                                    <td>@item.Blog.BlogTitle</td>
                                    <td>@item.CommentUserName</td>
                                    <td>@item.CommentTitle</td>
                                    <td>@item.CommentContent</td>
                                    <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                    @if (item.BlogScore <= 6)
                                    {
                                        <td class="text-danger"><i class="fa fa-level-up">@item.BlogScore </i></td>
                                    }
                                    else
                                    {
                                        <td class="text-navy"><i class="fa fa-level-up">@item.BlogScore </i></td>
                                    }
                                    <td><a href="#" class="btn btn-primary"><i class="fa fa-wrench"></i></a></td>
                                    <td><a href="#" class="btn btn-danger"><i class="fa fa-times"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>