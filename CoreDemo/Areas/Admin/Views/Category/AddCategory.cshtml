@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading mt-3">
    <div class="col-lg-10">
        <h2>Yeni Kategori Ekleme Sayfası</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Dashboard/Index">Ana Safya</a>
            </li>
            <li class="breadcrumb-item">
                <a>Kategoriler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Yeni Kategori Ekleme Sayfası</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Yeni Kategori Ekleme Sayfası <small>Lütfen tüm alanları doldurun.</small></h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Kategori Başlığı</label>

                            <div class="col-sm-10">
                                <input type="text" name="CategoryName" class="form-control" placeholder="Kategori başlığını giriniz.">
                            </div>
                            @Html.ValidationMessageFor(x=>x.CategoryName)
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Kategori Açıklaması</label>

                            <div class="col-sm-10"><input type="text" name="CategoryDescription" class="form-control" placeholder="Kategori açıklamasını giriniz."></div>
                            @Html.ValidationMessageFor(x=>x.CategoryDescription)
                        </div>
                        <div class="hr-line-dashed"></div>

                        <button type="submit" class="btn btn-primary col-12">Kategoriyi Oluştur!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>