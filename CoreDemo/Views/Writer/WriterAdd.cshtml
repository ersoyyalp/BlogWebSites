@model CoreDemo.Models.AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Ekleme Sayfası</h4>
                <p></p>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Profil Resmi</label>
                        <div class="input-group col-xs-12">
                            <input type="file" class="form-control file-upload-info" asp-for="WriterImage" placeholder="Profil resminizi seçiniz.">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(x=>x.WriterImage)
                    </div>

                    <div class="form-group">
                        <label>İsim Soyisim</label>
                        <input type="text" asp-for="WriterName" class="form-control" placeholder="İsim ve soyisminizi giriniz.">
                        @Html.ValidationMessageFor(x=>x.WriterName)
                    </div>

                    <div class="form-group">
                        <label>E-Posta</label>
                        <input type="mail" asp-for="WriterMail" class="form-control" placeholder="E-Posta adresinizi giriniz.">
                        @Html.ValidationMessageFor(x=>x.WriterMail)
                    </div>

                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="text" class="form-control file-upload-info" asp-for="WriterPassword" placeholder="Yeni şifrenizi giriniz.">
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>

                    <div class="form-group">
                        <label>Şifre Tekrarı</label>
                        <input type="text" class="form-control file-upload-info" asp-for="WriterConfirmPassword" placeholder="Yeni şifrenizin tekrarını giriniz.">
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>

                    <div class="form-group">
                        <label>Yazar Hakkında</label>
                        <textarea class="form-control" rows="4" asp-for="WriterAbout"></textarea>
                        @Html.ValidationMessageFor(x=>x.WriterAbout)
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet!</button>
                </form>
            </div>
        </div>
    </div>
</div>


