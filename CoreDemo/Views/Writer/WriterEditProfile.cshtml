@model UserUpdateViewModel

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Bilgileri Güncelleme Sayfası</h4>
                <p></p>
                <form method="post" class="forms-sample" enctype="multipart/form-data">

                    <div class="row py-1 mb-3">
                        <div class="col-md-5">
                            <img src="@Model.imageUrl" class="img-fluid" alt="Profil Resmi" />
                        </div>
                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <label for="image" class="form-label">Profil Resmi</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>İsim Soyisim</label>
                        <input type="text" asp-for="nameSurname" class="form-control" placeholder="İsim ve soyisminizi giriniz.">
                    </div>

                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input type="text" asp-for="userName" class="form-control" placeholder="Kullanıcı adınızı giriniz.">
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label>Yazar Hakkında</label>
                            <textarea class="form-control" rows="4" asp-for="aboutWriter"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>E-Posta</label>
                        <input type="mail" asp-for="mail" class="form-control" placeholder="E-Posta adresinizi giriniz.">
                    </div>

                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="password" class="form-control file-upload-info" asp-for="password" placeholder="Yeni şifrenizi giriniz.">
                    </div>

                    @*<div class="form-group">
                    <label>Şifre Tekrarı</label>
                    <input type="text" class="form-control file-upload-info" asp-for="WriterConfirmPassword" placeholder="Yeni şifrenizin tekrarını giriniz.">
                    @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>*@

                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle!</button>
                </form>
            </div>
        </div>
    </div>
</div>


