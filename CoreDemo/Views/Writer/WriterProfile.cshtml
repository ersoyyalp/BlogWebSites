@model List<Writer>

@{
    ViewData["Title"] = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="border-bottom text-center pb-4">
                            <img src="@Model.FirstOrDefault().WriterImage" alt="profile" class="img-lg rounded-circle mb-3" />
                            <p>@Model.FirstOrDefault().WriterAbout </p>
                            <div class="d-flex justify-content-between">
                                <a href="/Blog/BlogListByWriter" class="btn btn-outline-success">Bloglarım</a>
                                <a href="/Blog/AddBlog/" class="btn btn-outline-primary">Yeni Blog</a>
                            </div>
                        </div>
                        <div class="border-bottom py-4">
                            <p>Kategoriler</p>
                            <div>
                                <label class="badge badge-outline-dark">Yazılım</label>
                                <label class="badge badge-outline-dark">Teknoloji</label>
                                <label class="badge badge-outline-dark">Dizi & Film</label>
                                <label class="badge badge-outline-dark">Spor</label>
                                <label class="badge badge-outline-dark">Seyahat</label>
                            </div>
                        </div>
                        <div class="border-bottom py-4">
                            <div class="d-flex mb-3">
                                <div class="progress progress-md flex-grow">
                                    <div class="progress-bar bg-gradient-primary" role="progressbar" aria-valuenow="55" style="width: 100%" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="progress progress-md flex-grow">
                                    <div class="progress-bar bg-gradient-success" role="progressbar" aria-valuenow="75" style="width: 100%" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left"> Durum </span>
                                <span class="float-right text-muted"> Aktif </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left"> İsim Soyisim </span>
                                <span class="float-right text-muted"> @Model.FirstOrDefault().WriterName </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left"> E-Posta </span>
                                <span class="float-right text-muted"> @Model.FirstOrDefault().WriterMail </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left"> Facebook </span>
                                <span class="float-right text-muted">
                                    <a href="#">@Model.FirstOrDefault().WriterName</a>
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left"> Twitter </span>
                                <span class="float-right text-muted">
                                    <a href="#">@Model.FirstOrDefault().WriterName</a>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="profile-feed">
                            @await Component.InvokeAsync("WriterProfile")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
