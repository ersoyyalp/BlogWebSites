@model AddBlogImage

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Blog Ekleme Sayfası</h4>
                <p></p>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Blog Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="Blog başlığını giriniz.">
                    </div>

                    <div class="form-group">
                        <label>Blog Görseli</label>
                        <div class="input-group col-xs-12">
                            <input type="file" class="form-control file-upload-info" asp-for="Image" placeholder="Blog görselini seçiniz.">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Blog Ana Görseli</label>
                        <div class="input-group col-xs-12">
                            <input type="file" class="form-control file-upload-info" asp-for="ThumbnailImage" placeholder="Blog ana görselini seçiniz.">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Kategori</label>
                        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.cv,"Kategori seçiniz.",new {@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label>Blog İçeriği</label>
                        <textarea id="summernoteEditor" asp-for="Content" name="content"></textarea>
                        @Html.ValidationMessageFor(x=>x.Content)
                    </div>

                    <button type="submit" class="btn btn-outline-primary mr-2">Bloğu Oluştur!</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{

<script>
    $(document).ready(function () {
        $('#summernoteEditor').summernote({
                height: 300,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true                  // set focus to editable area after initializing summernote
        });
    });
</script>
}