@using static CoreDemo.Controllers.EmployeeTestController;
@model List<Class1>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Çalışanlar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Dashboard/Index">Ana Safya</a>
            </li>

            <li class="breadcrumb-item active">
                <strong>Çalışanlar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5> Çalışanlar </h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kişi Bilgileri </th>
                                    <th>Düzenle </th>
                                    <th>Sil </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td><strong>@item.Name</strong></td>
                                        <td><a href="/EmployeeTest/EditEmployee/@item.ID"><i class="fa fa-edit text-info"></i></a></td>
                                        <td><a href="/EmployeeTest/DeleteEmployee/@item.ID"><i class="fa fa-times text-danger"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/EmployeeTest/AddEmployee/" class="btn btn-primary col-12">Yeni Çalışan Oluştur!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>