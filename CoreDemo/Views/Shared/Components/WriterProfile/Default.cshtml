@model List<Blog>

<div class="d-flex align-items-start profile-feed-item pe-4">
    <div class="ml-4">
        @foreach (var item in Model)
        {
            <h1 class="mt-3">
                Son Bloğunuz <small class="ml-4 text-muted"><i class="mdi mdi-clock mr-1"></i>10 Saat Önce</small>
            </h1>
            <h6 class="mt-3"> @item.BlogTitle </h6>
            <img src="@item.BlogThumbnailImage" alt="sample" class="rounded mw-100 mt-3" />
            <p class="mt-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,300).LastIndexOf(" "))...</p>
            <p class="small text-muted mt-2 mb-0 mt-3">
                <span>
                    <i class="mdi mdi-star mr-1"></i>4
                </span>
                <span class="ml-2">
                    <i class="mdi mdi-comment mr-1"></i>11
                </span>
                <span class="ml-2">
                    <i class="mdi mdi-reply"></i>2
                </span>
            </p>
        }
    </div>
</div>