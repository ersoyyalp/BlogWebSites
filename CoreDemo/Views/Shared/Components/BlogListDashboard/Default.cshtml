@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tüm Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Blog Bilgileri </th>
                                <th> Kategori Adı </th>
                                <th> Durum </th>
                                <th> Yayınlanma Tarihi </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.BlogID </td>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                                    <td> @item.Category.CategoryName </td>
                                    @if (item.BlogStatus == true)
                                    {
                                        <td>
                                            <label class="badge badge-gradient-success">Aktif</label>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label class="badge badge-gradient-danger">Pasif</label>
                                        </td>
                                    }
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td> <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-primary btn-xs" target="_blank">Detaylar</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
