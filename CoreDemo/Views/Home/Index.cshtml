@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!--/banner-->
<div class="banner">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <div class="carousel-caption">
                    <h3>
                        İLGİ ÇEKİCİ VE ETKİLEYİCİ GÖRSEL İÇERİKLERLE DOLU DÜNYAMIZA
                        <span>HOŞ GELDİNİZ!</span>
                    </h3>

                </div>
            </div>
            <div class="carousel-item item2">
                <div class="carousel-caption">
                    <h3>
                        EN İYİ YAZILARIMIZI SİZİNLE
                        <span>PAYLAŞIYORUZ!</span>
                    </h3>
                </div>
            </div>
            <div class="carousel-item item3">
                <div class="carousel-caption">
                    <h3>
                        SEYAHAT, KÜLTÜR VE GEZİ YAZILARIMIZLA
                        <span>YENİ YERLER KEŞFEDİN!</span>
                    </h3>
                </div>
            </div>
            <div class="carousel-item item4">
                <div class="carousel-caption">
                    <h3>
                        HER KONUDA BİLGİLENDİRİCİ YAZILARIMIZLA
                        <span>KENDİNİZİ GELİŞTİRİN!</span>
                    </h3>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--/model-->
<!--//banner-->
@await Component.InvokeAsync("HomeBanner")
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">
                    <div class="b-grid-top">
                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="~/CoreBlogTema/images/b5.jpg" class="img-fluid" alt="">
                            </a>
                        </div>
                    </div>

                    <h3>
                        Keşfetmeye Hazır Olun: Blogumuzla Tanışın!
                    </h3>
                    <p>
                        Bizler, hayatın kendisi gibi öğrenmekten asla vazgeçmeyen bir grup insanız.
                        Misyonumuz, herkesin hayatına dokunacak içerikler üretmek ve paylaşmak.
                        Blogumuzda, farklı konular hakkında yazılar, öneriler ve deneyimler paylaşıyoruz.
                        Okuyucularımızın hayatlarında pozitif bir değişim yaratmak için çaba gösteriyoruz.
                        İçeriklerimizde, dürüstlük, saygı ve empati ilkelerine sadık kalıyoruz.
                        Siz de bizimle birlikte öğrenmek, keşfetmek ve paylaşmak isterseniz, blogumuzu takip etmeye davet ediyoruz.
                    </p>
                </div>
            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">

                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                    <div class="tech-btm widget_social">
                        <h4>Stay Connect</h4>
                        <ul>

                            <li>
                                <a class="twitter" href="#">
                                    <i class="fab fa-twitter"></i>
                                    <span class="count">317K</span> Twitter Takipçisi
                                </a>
                            </li>
                            <li>
                                <a class="facebook" href="#">
                                    <i class="fab fa-facebook-f"></i>
                                    <span class="count">218k</span> Facebook Takipçisi
                                </a>
                            </li>
                            <li>
                                <a class="dribble" href="#">
                                    <i class="fab fa-dribbble"></i>

                                    <span class="count">215k</span> Dribble Takipçisi
                                </a>
                            </li>
                            <li>
                                <a class="pin" href="#">
                                    <i class="fab fa-pinterest"></i>
                                    <span class="count">190k</span> Pinterest Takipçisi
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </aside>
            <!--//right-->
        </div>
    </div>
    <!--//main-->
    <div class="container">
        <div class="row">
            <!--left-->
            @await Component.InvokeAsync("HomeLastPost")
            <!--//left-->
            <!--right-->
            @await Component.InvokeAsync("HomeRecentPosts")

            <!--//right-->
        </div>
    </div>
</section>
<!--//main-->
